    <main class="container">
        <div class="row">
            <div class="col-lg-3">
                <section class="card shadow" data-aos="fade-down-right" data-aos-offset="0" data-aos-delay="150" style="margin-bottom: 24px;">
                    <div class="card-body" style="font-family: 'Alatsi';">
                        <div style="width: 15vmin;height: 15vmin;display: block;margin: 0 auto;background: url(../assets/img/user-g05cb79af5_640.png) center center;background-size: cover;border-radius: 50%;margin-bottom: 12px;filter: hue-rotate(-196deg) saturate(1.3) drop-shadow(6px 5px 15px rgba(0,0,0,.1));"></div>
                        <h4 class="text-center card-title">Olá, <strong>Admin</strong>!</h4>
                        <h6 class="text-center text-text-muted card-subtitle mb-2">@@admin</h6>
                        <p class="card-text" style="font-family: Arial;text-align: justify;"><em>"Nullam id dolor id nibh ultricies vehicula ut id elit. Cras justo odio, dapibus ac facilisis in..."</em></p>
                    </div>
                </section>
                <section class="card shadow" data-aos="fade-right" data-aos-offset="0" data-aos-delay="250" style="display: flex;">
                    <h4 class="text-center" style="margin-top: 12px;font-family: 'Alatsi';">Ações Rápidas</h4>
                    <div class="btn-group-vertical" role="group" style="margin: 16px;background: white;margin-top: 0;">
                        <button class="btn btn-outline-success" type="button">&nbsp;Criar Usuário</button>
                        <button class="btn btn-outline-success" type="button">Criar Destino</button>
                        <button class="btn btn-outline-danger" type="button">Voltar ao Início</button>
                    </div>
                <section/>
            </div>
            <div class="col" data-aos="fade-down" data-aos-duration="250">
                <section class="card shadow" style="margin-bottom: 24px;border: 0;display: inherit;">
                    <div class="card-body">
                        <h1 data-aos="fade-down">&nbsp;<strong>Clientes</strong></h1>
                        <section data-aos="zoom-in-down" data-aos-duration="250" data-aos-delay="200">
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>ID:</th>
                                                    <th>Nome:</th>
                                                    <th class="text-center">Criado em:</th>
                                                    <th class="text-end">Ações</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model) {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UID)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.nome)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.criadoEm)
                                                    </td>
                                                    <td class="text-end text-muted">
                                                        <a asp-action="Details" asp-route-id="@item.UID">Ver</a>&nbsp;|&nbsp;
                                                        <a asp-action="Edit" asp-route-id="@item.UID">Editar</a>&nbsp;|&nbsp;
                                                        <a asp-action="Delete" asp-route-id="@item.UID" class="link-danger">Excluir</a>
                                                    </td>
                                                </tr>}
                                            </tbody>
                                        </table>
                                    </div><a class="btn btn-success" type="button" asp-action="Create">Novo Cadastro</a>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
                <p class="text-center" data-aos="fade-up" data-aos-duration="1250" data-aos-offset="0" data-aos-delay="2650">Template criado por <strong>Wellington N.</strong></p>
            </div>
        </div>
    </main>
    <style>
        body {
            background: rgb(216,225,236);
        }
        footer {
            background: linear-gradient(to bottom, rgb(216,225,236), rgb(32 151 112)) !important;
            background-color: rgb(216,225,236);
        }
    </style>

